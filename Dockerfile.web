# Next.js (production) multi-stage image
FROM node:20-bullseye-slim AS deps
WORKDIR /app
# Enable corepack to use pnpm and allow lifecycle scripts (esbuild, contentlayer, sharp)
RUN corepack enable
ENV PNPM_ENABLE_PRE_POST_SCRIPTS=true \
    PNPM_ALLOW_SCRIPTS=* \
    NEXT_TELEMETRY_DISABLED=1
COPY package.json pnpm-lock.yaml* ./
RUN pnpm install --frozen-lockfile

FROM node:20-bullseye-slim AS builder
WORKDIR /app
ENV NODE_ENV=production \
    NODE_OPTIONS=--max-old-space-size=2048 \
    PNPM_ENABLE_PRE_POST_SCRIPTS=true \
    PNPM_ALLOW_SCRIPTS=* \
    NEXT_TELEMETRY_DISABLED=1
RUN corepack enable
COPY --from=deps /app/node_modules ./node_modules
COPY . .
# Build Next.js app
RUN pnpm build

FROM node:20-bullseye-slim AS runner
WORKDIR /app
ENV NODE_ENV=production
# Prevent Next telemetry in container
ENV NEXT_TELEMETRY_DISABLED=1
# Copy only runtime artifacts
COPY --from=builder /app/package.json ./package.json
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/node_modules ./node_modules
EXPOSE 3000
CMD ["node", "node_modules/next/dist/bin/next", "start"]
